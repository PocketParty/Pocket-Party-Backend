generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Empresas {
    id             Int              @id @default(autoincrement())
    createdAt      DateTime         @default(now())
    nome           String
    endereco       String
    telefone       String
    cep            String
    cnpj           String           @unique
    email          String           @unique
    username       String           @unique
    senha          String
    catalogo       Catalogos[]
    LojasFavoritas LojasFavoritas[]
}

model Catalogos {
    id         Int        @id @default(autoincrement())
    quantidade Int
    empresa    Empresas   @relation(fields: [empresaId], references: [id])
    empresaId  Int
    produto    Produtos[]
}

model Produtos {
    id            Int       @id @default(autoincrement())
    createdAt     DateTime  @default(now())
    catalogo      Catalogos @relation(fields: [catalogoId], references: [id])
    catalogoId    Int
    imagem        String
    preco         Float
    notaAvaliacao Float
    descricao     String
    tags          String
}

model Clientes {
    id             Int              @id @default(autoincrement())
    createdAt      DateTime         @default(now())
    nome           String
    endereco       String
    cpf            String
    email          String
    telegone       String
    LojasFavoritas LojasFavoritas[]
}

model LojasFavoritas {
    id        Int      @id @default(autoincrement())
    empresa   Empresas @relation(fields: [empresaId], references: [id])
    empresaId Int
    cliente   Clientes @relation(fields: [clienteId], references: [id])
    clienteId Int
}
