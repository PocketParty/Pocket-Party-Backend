generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Empresas {
    id        Int         @id @default(autoincrement())
    createdAt DateTime    @default(now())
    nome      String
    endereco  String
    descricao String
    contato   String
    cnpj      String      @unique
    email     String      @unique
    catalogo  Catalogos[]
}

model Catalogos {
    id         Int        @id @default(autoincrement())
    quantidade Int
    empresa    Empresas   @relation(fields: [empresaId], references: [id])
    empresaId  Int
    produto    Produtos[]
}

model Produtos {
    id            Int       @id @default(autoincrement())
    createdAt     DateTime  @default(now())
    catalogo      Catalogos @relation(fields: [catalogoId], references: [id])
    catalogoId    Int
    imagem        Bytes?
    preco         Float
    notaAvaliacao Float?
    descricao     String
    tags          String
}
